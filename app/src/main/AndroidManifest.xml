<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="31">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Inventory">

        <!-- TEMPORAL: HU 2.0 - LoginActivity como pantalla principal -->
        <!-- Nota para el equipo:
             Actualmente el LoginActivity está configurado como pantalla de inicio
             solo para pruebas de la HU 2.0.
             Una vez que se integre la navegación o se defina la pantalla principal,
             deben CAMBIAR el intent-filter al MainActivity o DashboardActivity,
             de modo que esa actividad sea la nueva pantalla de inicio (launcher). -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity registrada (sin launcher). -->
        <activity
            android:name=".view.MainActivity"
            android:exported="false" />
    </application>
</manifest>
